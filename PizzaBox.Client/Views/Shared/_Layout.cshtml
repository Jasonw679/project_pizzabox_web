<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>PizzaBox</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body>
  <div class="container-fluid">
    <header class="p-3 mb-2 bg-primary text-white">
      <h1>PizzaBox</h1>
      @model PizzaBox.Client.Models.OrderViewModel;
      @if (Model.SelectedCustomer != null)
      {
        <form action="/order_history">
          <fieldset>
            <input id=@Model.SelectedCustomer name="SelectedCustomer" value=@Model.SelectedCustomer hidden>
            <a href="/customer" class="text-white">Change Customer</a>
            <input type="submit" value="View Order History">
          </fieldset>
        </form>
      }
      else
      {
        <p>Guest</p>
        <a href="/customer" class="text-white">New Customer</a>
      }
    </header>

    <main>
      @RenderBody()
    </main>

    <footer class="p-3 mb-2 bg-primary text-white">
      <small>&copy; 2021</small>
    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
